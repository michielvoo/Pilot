{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "pwsh"
                }
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                }
            },
            "command": ". (Join-Path \"${workspaceFolder}\" Publish-PowerShellModule.ps1); Publish-PowerShellModule",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "pwsh"
                }
            },
            "windows": {
                "options": {
                    "shell": {
                        "executable": "powershell.exe"
                    }
                }
            },
            "command": "Invoke-Pester ${workspaceFolder}",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}