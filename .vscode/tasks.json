{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "detail": "Publish the PowerShell module to the local staging repository",
            "type": "process",
            "command": "pwsh",
            "windows": {
                "command": "powershell.exe"
            },
            "args": ["-File", ".vscode${pathSeparator}tasks.ps1", "Build"],
            "group": "build"
        },
        {
            "label": "Test",
            "detail": "Run all Pester tests",
            "type": "process",
            "command": "pwsh",
            "windows": {
                "command": "powershell.exe"
            },
            "args": ["-File", ".vscode${pathSeparator}tasks.ps1", "Test"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Install",
            "detail": "Install from repository named Pilot",
            "type": "process",
            "command": "pwsh",
            "windows": {
                "command": "powershell.exe"
            },
            "args": ["-File", ".vscode${pathSeparator}tasks.ps1", "Install"],
            "group": "test"
        }
    ]
}